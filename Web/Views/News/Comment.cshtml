@model Data.Comment
<div class="media">
    <a class="pull-left" href="#">
        <img class="media-object" width="100" src="@Url.Action("Avatar","User", new { @id = Model.UserId })" />
    </a>
    <div class="media-body">
        <h4 class="media-heading">
            @Model.User.Name
            <small>@Model.Date</small>
        </h4>
        @Model.Text
    </div>
</div>
