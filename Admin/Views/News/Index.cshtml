@model IEnumerable<Data.News>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YayimTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimYol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewsType.Adi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YayimTarihi)
        </td>
        <td>
            <img src="@Url.Action("ResimYol",new{@id = item.Id})" width="100" /> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NewsType.Adi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
