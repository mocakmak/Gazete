@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <br />
            <div class="col-md-6 col-md-offset-3">
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger">@TempData["error"]</div>
                    <br />
                }
                <div class="panel panel-default">
                    <div class="panel-heading">Giriş Yapın</div>
                    <div class="panel-body">
                        <form class="form-horizontal" method="post" action="@Url.Action("Login","Home")">
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label">E-Posta:</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" name="email" value="@Request.Form["email"]" placeholder="E-Posta">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">Parola:</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Parola">
                                </div>
                            </div>
                            <div class="col-sm-offset-3">
                                <button type="submit" class="btn btn-success">Giriş</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
